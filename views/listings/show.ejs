<% layout("/layouts/boilerplate")-%>
<body>
    <div class="row">
    <div class="col-8 offset-2">
    <h3><%= listing.title%></h3>
    <div class="card listing-card" style="width: 35rem;">
        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
        <div class="card-body">
          <p class="card-text"></p>
          <br>
          <%= listing.description %>
          <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
          <br>
          <%= listing.country %>
          <br>
          <%= listing.location %>
        </div>
      </div>
        <br>
        <div class="row">
            <div class="col-2 "><a href="/listings/<%=listing._id%>/edit" class="btn btn-dark" style="background-color: red;">Edit this page</a></div>
        
        <div class="col-2"><form method="POST" action="/listings/<%=listing._id%>?_method=DELETE"> 
            <button class="btn btn-dark">Delete </button></div>
        </form>
        </div>
        </div>
        </div>
        <br>
        <hr>

        <div class="col-8 offset-2 mb-3">
           <h4>Leave a review</h4>
           <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3 mt-3">
              <label for="commet" class="form-label">Comments</label>
              <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
              <div class="invalid-feedback">Please add some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
           </form>
        </div>
      
      <hr />

      <div class="col offset-2">
      <h4>All Reviews</h4>
      <div class="row">
      <% for(review of listing.reviews){  %> 
        <div class="card col-5 ms-3 mb-3 mt-3">
          <div class="card-body">
          <h5 class="card-title">Jane Doe</h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%></p>
          <form class="mb-3" method="POST" action="/listing/<%=listing._id%>/reviews/<%=review._id%>"> 
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
          </div>            
        </div>
      <% } %>
      </div>
      </div>
</body>
